<!doctype html>
<html>
  {{> partials/head title=home.pageTitle }}
  <style>
    * {
      box-sizing: border-box;
    }

    body {
      background: black;
      margin: 0;
      padding: 0;
      {{!-- overflow: hidden; --}}
    }

    html,
    body {
      color: white;
      font-family: arial, sans-serif;
      font-size: 13px;
      font-weight: normal;
      height: 100%;
      line-height: 1.5;
    }
  
